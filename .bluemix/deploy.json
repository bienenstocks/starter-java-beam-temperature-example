{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
       "sa-instance-name": {
         "description": "JSON containing the Streaming Analytics Service credentials. This can be found by clicking the Service Credentials link on the left side of the Streaming Analytics Service. Then, click View Credentials to view the JSON.",
          "type": "string",
          "pattern": "\\S"
       },
       "mh-instance-name": {
          "description": "JSON containing the Message Hub Service credentials. This can be found by clicking the Service Credentials link on the left side of the Message Hub Service. Then, click View Credentials to view the JSON.",
          "type": "string",
          "quoted": true
        },
        "cos-instance-name": {
          "description": "The endpoint can be found by clicking the Endpoint link of the left side of the Cloud Object Storage service. Choose a public endpoint from the chosen region that contains the bucket to write to.",
          "type": "string"
        },
        "prod-region": {
          "description": "The bluemix region",
          "type": "string"
        },
        "prod-organization": {
            "description": "The bluemix org",
            "type": "string"
        },
        "prod-space": {
            "description": "The bluemix space",
            "type": "string"
        },
        "prod-app-name": {
            "description": {
                "$ref": "#/messages/deploy.appDescription"
            },
            "type": "string",
            "pattern": "\\S"
        }
    },
    "required": [
        "sa-instance-name",
        "mh-instance-name",
        "cos-instance-name",
        "prod-region",
        "prod-organization",
        "prod-space",
        "prod-app-name"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.appName"
            },
            "key": "prod-app-name"
        },
        {
           "type": "text",
           "readonly": false,
           "title": "Streaming Analytics Service Instance Name",
           "key": "sa-instance-name"
        },
        {
          "type": "text",
          "readonly": false,
          "title": "Message Hub Service Instance Name",
          "key": "mh-instance-name"
       },
       {
          "type": "text",
          "readonly": false,
          "title": "Cloud Object Storage Service Instance Name",
          "key": "cos-instance-name"
        },
        {
            "type": "table",
            "columnCount": 4,
            "widths": [
                "15%",
                "28%",
                "28%",
                "28%"
            ],
            "items": [
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/organization"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/space"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/prodStage"
                    }
                },
                {
                    "type": "select",
                    "key": "prod-region"
                },
                {
                    "type": "select",
                    "key": "prod-organization"
                },
                {
                    "type": "select",
                    "key": "prod-space",
                    "readonly": false
                }
            ]
        }
    ]
}